<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Simple_Icon_File_Maker.Controls.PreviewImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Simple_Icon_File_Maker.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <ScrollViewer
        x:Name="CanvasViewBox"
        CompositeMode="SourceOver"
        ZoomMode="Enabled">
        <canvas:CanvasControl
            x:Name="ImageCanvas"
            Grid.Row="0"
            Grid.Column="0"
            Width="100"
            Height="100"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Draw="ImageCanvas_Draw">
            <canvas:CanvasControl.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem Click="MenuFlyoutItem_Click" Text="Save this image..." />
                </MenuFlyout>
            </canvas:CanvasControl.ContextFlyout>
        </canvas:CanvasControl>
    </ScrollViewer>
</UserControl>
